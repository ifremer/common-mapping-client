{
    "layers": [
        {
            "id": "argo-discovery",
            "title": "Argo discovery",
            "type": "data",
            "handleAs": "vector_date_geojson",
            "vectorStyle": "profile",
            "url": "http://bluecloud.odatis-ocean.fr/argo/api/monthly_argo_data?end_date={TIME_MAX}&output_format=geojson",
            "metadata": {
                "url": "default-data/ifremer-data/layer-metadata/argo_discovery.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/argo_discovery_thumbnail.png",
            "updateParameters": {
                "time": true,
                "filters": {
                   "selected_parameter" : {
                        "label": "Select parameter",
                        "property":"selectedParameterMax",
                        "value": "",
                        "list": [{"palette":"sea-surface-temp-erddap", "label":"Sea water temperature","code":35},{"palette":"sea-surface-salinity","label":"Sea water salinity","code":30}],
                        "type": "select"
                    }
                }
            },
            "mapping": {
                "title": "platformCode",
                "subtitle": "dateEnd",
                "properties": {
                    "platformCode" : "Platform code",
                    "platformDescription": "Platform description",
                    "platformName": "Platform name" ,
                    "platformType": "Platform type",
                    "parameterDescription": ["Parameter code", "description", "max", "min", "qc", "unit"]
                },
                "data": {
                    "label": "To profile data",
                    "link": "https://co-insitucharts.ifremer.fr/station/{IDENTIFIER}/",
                    "identifier": { "code": "stationIds", "type": "array" }
                }
            }
        },
        {
            "id": "argo-eov-data",
            "title": "Argo EOV data discovery",
            "type": "data",
            "handleAs": "vector_date_geojson",
            "vectorStyle": "profile",
            "url": "http://localhost:8080/api/eosc/geojson?start=998242907",
            "metadata": {
                "url": "default-data/ifremer-data/layer-metadata/argo_eov_data.json",
                "handleAs": "json"
            },
            "thumbnailImage": "img/argo_discovery_thumbnail.png",
            "updateParameters": {
                "time": true,
                "filters": {
                    "parameter" : {
                        "label": "Select parameter",
                        "property":"parameter_value",
                        "value": "35",
                        "list": [
                            {"palette":"sea-surface-temp-erddap", "label":"Sea water temperature","code":"35"},
                            {"palette":"sea-surface-salinity","label":"Sea water salinity","code":"30"}
                        ],
                        "type": "select"
                    },
                    "depth" : {
                        "label": "Select depth",
                        "property":"z_level",
                        "value": "0",
                        "list": [
                            {"label":"Sea surface","code":0},
                            {"label":"5 meters depth","code":5},
                            {"label":"100 meters depth","code":100},
                            {"label":"500 meters depth","code":500},
                            {"label":"1000 meters depth","code":1000},
                            {"label":"1500 meters depth","code":1500},
                            {"label":"2000 meters depth","code":2000}
                        ],
                        "type": "select"
                    }
                 }
            },
            "mapping": {
                "title": "platform_code",
                "subtitle": "station_date",
                "properties": {
                    "parameter_code" : "Parameter code",
                    "parameter_value": "Parameter value",
                    "z_level": "depth level" ,
                    "z_value": "real depth"
                },
                "data": {
                    "label": "To profile data",
                    "link": "https://co-insitucharts.ifremer.fr/station/{IDENTIFIER}/",
                    "identifier": { "code": "station_id", "type": "number" }
                }
            }
        },
        {
            "id": "Reference_Labels",
            "title": "Reference Labels",
            "type": "reference",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "Reference_Features",
            "title": "Reference Features",
            "type": "reference",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "ESRI_World_Imagery",
            "title": "ESRI High Resolution World Imagery",
            "type": "basemap",
            "thumbnailImage": "img/ESRI_World_Imagery.jpeg",
            "isDefault": true,
            "handleAs": "xyz_raster",
            "updateParameters": { "time": false },
            "mappingOptions": {
                "projection": "EPSG:4326",
                "layer": "ESRI_World_Imagery",
                "url":
                    "https://services.arcgisonline.com/arcgis/rest/services/ESRI_Imagery_World_2D/MapServer/tile/{z}/{y}/{x}",
                "tileGrid": {
                    "minZoom": 1,
                    "maxZoom": 16,
                    "tileSize": 512
                },
                "urlFunctions": {
                    "openlayers": "esriCustom512"
                }
            }
        },
        {
            "id": "BlueMarble_ShadedRelief_Bathymetry",
            "title": "Blue Marble, Shaded Relief w/Bathymetry",
            "type": "basemap",
            "thumbnailImage": "img/BlueMarble_ShadedRelief_Bathymetry.jpeg",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "OSM_Land_Water_Map",
            "title": "Land/Water Map (data from OSM)",
            "type": "basemap",
            "thumbnailImage": "img/OSM_Land_Water_Map.png",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        },
        {
            "id": "ASTER_GDEM_Color_Shaded_Relief",
            "title": "Digital Elevation Map (Color Shaded Relief)",
            "type": "basemap",
            "thumbnailImage": "img/ASTER_GDEM_Color_Shaded_Relief.jpeg",
            "handleAs": "GIBS_raster",
            "updateParameters": { "time": false }
        }
    ]
}
